
#:set s dp(150) #permet de bind s = dp(150)

<CanvasExample1>:
    canvas:
        Rectangle:
            # pos: dp(100), dp(200)
            # size: s, s
            pos: self.center_x-s/2, self.center_y-s/2 #permet de centrer le carré
            size: s, s
        Ellipse:
            pos: 200, 500
            size: s, s/2
        Line:
            # points: (0, 0, 100, 100) # ligne qui part de (x=0, y=0) à (x=100, y=100)
            # points: (0, 0, 100, 100, 200, 0, self.width, 100) # ligne qui part de (x=0, y=0) à (x=100, y=100) & qui redescend de (y=200 à y=0). Le self.width permet d'aller tout à droite.
            points: (0,0, self.width/4,100, self.width/2,0, self.width*3/4,100, self.width,0)
            width: 2 #rend la ligne plus épaisse

<CanvasExample2>:
    canvas:
        Line:
            points: (self.width/2, 0, self.width/2, self.height)
            width: 2
        Line:
            points: (0, self.height/2, self.width, self.height/2)
            width: 2