#:import layout_examples layout_examples
#:import widget_examples widget_examples
#:import navigation_screen_manager navigation_screen_manager
#:import boxlayout_with_action_bar boxlayout_with_action_bar
#:import canvas_examples canvas_examples

<MenuPrincipal@BoxLayout>:
    orientation: "vertical"
    Button:
        text: "Layouts"
        on_press: app.manager.push("LayoutExemplesTabs")
    Button:
        text: "Widgets"
        on_press: app.manager.push("WidgetsExample")
    Button:
        text: "Images"
        on_press: app.manager.push("ImageExample")
    Button:
        text: "Canvas"
        on_press: app.manager.push("CanvasExemplesTabs")

<MyScreenManager>:
    Screen:
        name: "MenuPrincipal"
        MenuPrincipal:
    Screen:
        name: "LayoutExemplesTabs"
        BoxLayoutWithActionBar:
            title: "Layouts"
            LayoutExemplesTabs:
    Screen:
        name: "WidgetsExample"
        BoxLayoutWithActionBar:
            title: "Widgets"
            WidgetsExample:
    Screen:
        name: "ImageExample"
        BoxLayoutWithActionBar:
            title: "Images"
            ImageExample:
    Screen:
        name: "CanvasExemplesTabs"
        BoxLayoutWithActionBar:
            title: "Canvas"
            CanvasExemplesTabs:

        
    

